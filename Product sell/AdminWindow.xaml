<Window x:Class="Product_sell.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель администратора" Height="400" Width="500">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Панель администратора" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <Button Content="Добавить товар" Height="40" Margin="0,0,0,10" Click="AddProduct_Click"/>
            <Button Content="Редактировать товар" Height="40" Margin="0,0,0,10" Click="EditProduct_Click"/>
            <Button Content="Удалить товар" Height="40" Margin="0,0,0,10" Click="DeleteProduct_Click"/>
            <Button Content="Список покупателей" Height="40" Margin="0,0,0,10" Click="Customers_Click"/>
            <Button Content="Список заказов" Height="40" Margin="0,0,0,10" Click="Orders_Click"/>
            <Button Content="Выйти" Height="40" Margin="0,20,0,0" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Window>