<Window x:Class="Product_sell.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать товар" Height="350" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Название:" Grid.Row="0"/>
        <TextBox x:Name="NameBox" Grid.Row="1" Margin="0,5,0,10"/>

        <TextBlock Text="Цена:" Grid.Row="2"/>
        <TextBox x:Name="PriceBox" Grid.Row="3" Margin="0,5,0,10"/>

        <TextBlock Text="Количество:" Grid.Row="4"/>
        <TextBox x:Name="QuantityBox" Grid.Row="5" Margin="0,5,0,10"/>

        <TextBlock Text="Описание:" Grid.Row="6"/>
        <TextBox x:Name="DescriptionBox" Grid.Row="6" Margin="0,22,0,-7"/>

        <Button Content="Сохранить" Grid.Row="6" Height="35" Margin="0,72,0,-62" Click="SaveButton_Click"/>
    </Grid>
</Window>