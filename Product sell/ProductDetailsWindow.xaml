<Window x:Class="Product_sell.ProductDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информация о товаре" Height="400" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="NameText" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <Image x:Name="ProductImage" Height="150" Margin="0,0,0,10"/>
            <TextBlock x:Name="PriceText" FontSize="16" Margin="0,0,0,5"/>
            <TextBlock x:Name="QuantityText" FontSize="16" Margin="0,0,0,5"/>
            <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>