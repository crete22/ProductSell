<Window x:Class="Product_sell.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="459" Width="570">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Логин:" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="LoginBox" Grid.Row="1" Height="30" Margin="0,0,0,10"/>
        <TextBlock Text="Пароль:" Grid.Row="2" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Height="30" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Войти" Width="100" Margin="0,0,10,0" Click="LoginButton_Click"/>
            <Button Content="Регистрация" Width="100" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>