<Window x:Class="Product_sell.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="561" Width="788">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Логин:" Grid.Row="0"/>
        <TextBox x:Name="LoginBox" Grid.Row="1" Margin="0,5,0,10"/>
        <TextBlock Text="Пароль:" Grid.Row="2"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Margin="0,5,0,10"/>
        <TextBlock Text="Фамилия:" Grid.Row="4"/>
        <TextBox x:Name="SurnameBox" Grid.Row="5" Margin="0,5,0,10"/>
        <TextBlock Text="Имя:" Grid.Row="6"/>
        <TextBox x:Name="NameBox" Grid.Row="7" Margin="0,5,0,10"/>
        <TextBlock Text="Отчество:" Grid.Row="8"/>
        <TextBox x:Name="PatronymicBox" Grid.Row="8" Margin="0,27,0,-12"/>
        <TextBlock Text="Телефон:" Grid.Row="8" Margin="10,79,-10,-79"/>
        <TextBox x:Name="PhoneBox" Grid.Row="8" Margin="10,124,-10,-109"/>
        <TextBlock Text="Email:" Grid.Row="8" Margin="10,174,-10,-174"/>
        <TextBox x:Name="EmailBox" Grid.Row="8" Margin="10,219,-10,-204"/>
        <Button Content="Зарегистрироваться" Grid.Row="8" Height="35" Margin="10,264,-10,-254" Click="RegisterButton_Click"/>
    </Grid>
</Window>